<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">
  <ui:style>
    .important {
      font-weight: bold;
    }
    .BoxWidget {
      left: -11px;
      margin-top: -11px;
      text-align:left;
    }
    .BoxWidget-Box {
      width: 20px;
      height: 20px;
      border: 1px solid black;
      margin-bottom: 4px;
      display: inline-block;
    }
    .BoxWidget-Label {
      position: relative;
      width: 10em;
      margin-left: -5em;
      margin-right: -5em;
      text-align: center;
      left: 10px;
    }
  </ui:style>
  <div class="{style.BoxWidget}">
    <div class="{style.BoxWidget-Box} pwt-BoxWidget-Box" ui:field="boxSpan"></div>
    <div class="{style.BoxWidget-Label} pwt-BoxWidget-Label" ui:field="labelSpan"></div>
  </div>
</ui:UiBinder>