<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.sourcePanel {
			background: yellow;
		}
		.diagramPanel {
			scroll: auto;
			min-width: 100%;
			min-height: 100%;
		}
		
		@url hdragger {
		}
		
		@external .gwt-SplitLayoutPanel-HDragger;
		
		.blackHorizontalSplitPane .gwt-SplitLayoutPanel-HDragger{
			background: url(images/blackSplitPanel.png)  no-repeat scroll center center #D0E4F6;
			width: 2px;
		}
		.blackHorizontalSplitPane {
			background: url(images/diagramBackground.png) repeat;
		}
	</ui:style>
	<g:SplitLayoutPanel addStyleNames="{style.blackHorizontalSplitPane}" ui:field="aSplitPanel">
		<g:west size="50">
			<g:StackLayoutPanel styleName="{style.sourcePanel}" ui:field="aSourcePanel" >
			</g:StackLayoutPanel>
		</g:west>
		<g:center>
			<g:AbsolutePanel  styleName="{style.diagramPanel}" ui:field="aDiagramPanel">
			</g:AbsolutePanel>
		</g:center>
	</g:SplitLayoutPanel>
</ui:UiBinder> 