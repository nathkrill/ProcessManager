<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">
  <ui:style>
    .important {
      font-weight: bold;
    }
    .BoxWidget {
      text-align: center;
      display: inline-block;
    }
    .BoxWidget-Box {
      width: 20px;
      height: 20px;
      border: 1px solid black;
      margin-bottom: 4px;
      display: inline-block;
    }
    .BoxWidget-Label {
      text-align: center;
    }
  </ui:style>
  <div class="{style.BoxWidget}">
    <div style="position: relative"><span class="{style.BoxWidget-Box} pwt-BoxWidget-Box" ui:field="boxSpan">&nbsp;</span></div>
    <div style="position: relative"><span class="{style.BoxWidget-Label} pwt-BoxWidget-Label" ui:field="labelSpan"></span></div>
  </div>
</ui:UiBinder>