<web-app id="ProcessEngine" version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <resource-ref>
        <description>
            Resource reference to the authentication database. This must have admin/writable access to the database to register
            new keys and authentication tokens.
        </description>
        <res-ref-name>
            jdbc/webauthadm
        </res-ref-name>
        <res-type>
            javax.sql.DataSource
        </res-type>
        <res-auth>
            Container
        </res-auth>
    </resource-ref>

    <servlet>
        <servlet-name>accountController</servlet-name>
        <servlet-class>uk.ac.bournemouth.darwin.html.AccountController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

