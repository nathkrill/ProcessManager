<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="nl.adaptivity.process.editor.android"
	android:versionCode="1"
	android:versionName="1.0" >

	<uses-sdk
		android:minSdkVersion="11"
		android:targetSdkVersion="19" />

	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@android:style/Theme.Holo.Light" >
		<activity
			android:name="nl.adaptivity.process.editor.android.PMEditor"
			android:label="@string/app_name"
			android:parentActivityName="nl.adaptivity.process.editor.android.ProcessModelListActivity" >
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="nl.adaptivity.process.editor.android.ProcessModelListActivity" />
		</activity>
		<activity
			android:name="nl.adaptivity.process.editor.android.ProcessModelListActivity"
			android:label="@string/title_processmodel_list" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="nl.adaptivity.process.editor.android.ProcessModelDetailActivity"
			android:label="@string/title_processmodel_detail"
			android:parentActivityName="nl.adaptivity.process.editor.android.ProcessModelListActivity" >
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="nl.adaptivity.process.editor.android.ProcessModelListActivity" />
		</activity>

		<provider
			android:name="nl.adaptivity.process.models.ProcessModelProvider"
			android:authorities="nl.adaptivity.process.models" 
			android:exported="false">
		</provider>

		<activity
			android:name="nl.adaptivity.process.editor.android.SettingsActivity"
			android:label="@string/title_activity_settings" >
		</activity>
	</application>

</manifest>