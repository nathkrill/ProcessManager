<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Null" />

    <style name="TaskitemContainer.Base" parent="Null">
        <item name="android:paddingLeft">@dimen/default_margin</item>
        <item name="android:paddingRight">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/half_margin</item>
        <item name="android:layout_marginTop">@dimen/half_margin</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>

    </style>

    <style name="OverviewCard">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/default_margin</item>
        <item name="android:paddingStart" tools:ignore="NewApi">@dimen/default_margin</item>
        <item name="android:paddingRight">@dimen/default_margin</item>
        <item name="android:paddingEnd" tools:ignore="NewApi">@dimen/default_margin</item>
        <item name="android:paddingBottom">@dimen/default_margin</item>
        <item name="android:paddingTop">@dimen/default_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="OverviewCard.Ellipsis">
        <item name="android:paddingBottom">@dimen/half_margin</item>
        <item name="android:paddingTop">@dimen/half_margin</item>
    </style>

    <style name="TextAppearance.Overview.Title" parent="TextAppearance.AppCompat.Title"></style>

    <style name="TaskitemContainer" parent="TaskitemContainer.Base" />

    <style name="Widget.IconButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bg_iconbutton</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>

        <item name="iconPadding">32dp</item>
        <item name="iconWidth">24dp</item>
        <item name="iconHeight">24dp</item>
        <item name="iconTint">@color/iconbutton_title</item>
    </style>

    <style name="TextAppearance.IconButton.Title" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/iconbutton_title</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.IconButton.Label" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/iconbutton_title</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.IconButton.Subtitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.IconButton.Title" parent="Widget.IconButton">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">16dp</item>
        <item name="iconPadding">16dp</item>
        <item name="iconWidth">40dp</item>
        <item name="iconHeight">40dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FabMenuItem" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:padding">@dimen/default_margin</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="FabMenuItem.Title" >
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="DragHandle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">12dp</item>
        <item name="android:src">@drawable/ic_drag_handle_black_24dp</item>
    </style>

</resources>
